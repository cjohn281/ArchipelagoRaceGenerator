<Application x:Class="RaceConfig.GUI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:RaceConfig.GUI"
             xmlns:viewModel="clr-namespace:RaceConfig.GUI.ViewModels"
             xmlns:view="clr-namespace:RaceConfig.GUI.View"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Theme/MenuButtonTheme.xaml"/>
                <ResourceDictionary Source="/Theme/GameOptionTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate DataType="{x:Type viewModel:TeamsViewModel}">
                <view:Teams/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewModel:GameOptionsViewModel}">
                <view:GameOptions/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewModel:FinalizeSettingsViewModel}">
                <view:FinalizeSettings/>
            </DataTemplate>
        </ResourceDictionary>
         
    </Application.Resources>
</Application>
